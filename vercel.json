{
  "version": 2,
  "github": {
    "enabled": true
  },
  "builds": [
    {
      "src": "/apps/server/dist/*",
      "use": "@now/node"
    },
    {
      "src": "/apps/web/out/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/apps/server/dist/index.js" },
    { "handle": "filesystem" },
    { "src": "/web/(.*)", "dest": "/apps/web/out/index.html" }
  ]
}
