{
  "include": [
    "@types",
    "apps/**/*",
    "core/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "jest.config.js",
    "babel.config.js"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "esnext",
      "dom.iterable"
    ],
    "paths": {
      "@apps/*": [
        "apps/*/src"
      ],
      "@core/*": [
        "core/*/lib"
      ]
    },
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    // "isolatedModules": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
  }
}
