{
  "name": "@apps/backend",
  "version": "0.0.1",
  "main": "src/index.js",
  "author": "Yuri Martins",
  "private": false,
  "scripts": {
    "server": "ts-node-dev --ignore-watch node_modules src/index.ts",
    "knex:seed:run": "knex seed:run --knexfile knexfile.ts",
    "knex:seed:make": "knex seed:make --knexfile knexfile.ts -x ts seed",
    "knex:migrate:make": "knex migrate:make --knexfile knexfile.ts -x ts migrations",
    "knex:migrate:latest": "knex migrate:latest --knexfile knexfile.ts",
    "knex:migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "knex": "^0.21.17",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/koa": "^2.11.7",
    "@types/koa__router": "^8.0.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1"
  }
}
